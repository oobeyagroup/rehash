			<%= image_tag "on.gif", :class => "indicator" %><h4>Current</h4>
			<ul class="stream-text" >
				<li>Dec-04-2012_02:00p</li><!-- <p>Stop</p> -->
				<li>Dec-04-2012_ArtBasel</li><!-- <p>Stop</p> -->
			</ul>
		
		<% else %>

